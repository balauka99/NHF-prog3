package object;

import loaders.SheetLoader;

public class Heart extends OsObject{
	private int index = 0;
	public Heart() {
		name = "heart";
		sheet = new SheetLoader("/objects/healt_sheet.png", 3, 1, 16, 16);
		skin = sheet.get(index);
	}
	public void damaged() {
		skin = sheet.get(index++);
		if(index == 3) {
			index = 2;
		}
	}
}
