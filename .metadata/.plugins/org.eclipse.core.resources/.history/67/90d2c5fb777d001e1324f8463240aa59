package menu;

import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.JButton;
import javax.swing.JPanel;

public class MenuPanel extends JPanel{
	private class NewGameButtonListener implements ActionListener{
		public void actionPerformed(ActionEvent newgame) {
			System.out.println("New Game");
		}
		
	}
	private class LoadButtonListener implements ActionListener{
		public void actionPerformed(ActionEvent newgame) {
			System.out.println("Load Game");
		}
	}
	private class BestRoundsButtonListener implements ActionListener{
		public void actionPerformed(ActionEvent newgame) {
			System.out.println("Best Rounds");
		}
		
	}
	private class ExitButtonListener implements ActionListener{
		public void actionPerformed(ActionEvent newgame) {
			System.exit(0);
		}
	}
	private JButton ngb = new JButton("New Game");
	private JButton lgb = new JButton("Load Game");
	private JButton brb = new JButton("Best Rounds");
	private JButton xtb = new JButton("EXIT");
	public MenuPanel() {
		
	}
}
