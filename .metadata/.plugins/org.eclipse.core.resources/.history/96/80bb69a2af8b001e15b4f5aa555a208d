package gameplay;

import javax.swing.JFrame;

public class GameWin extends JFrame{
	public GameWin(String character, String playerName, boolean LOAD_GAME) {
		setTitle("Dungeon Run");
		GamePanel gameP = new GamePanel(character);
		add(gameP);
		if(!LOAD_GAME) gameP.setupGame();
		else gameP.loadGameData();
		gameP.startMainT();
		pack();
		
		setLocationRelativeTo(null);
		setDefaultCloseOperation(EXIT_ON_CLOSE);
		setResizable(false);
	}
	public GameWin(String character, boolean LOAD_GAME) {
		setTitle("Dungeon Run");
		GamePanel gameP = new GamePanel(character);
		add(gameP);
		if(!LOAD_GAME) gameP.setupGame();
		else gameP.loadGameData();
		gameP.startMainT();
		pack();
		
		setLocationRelativeTo(null);
		setDefaultCloseOperation(EXIT_ON_CLOSE);
		setResizable(false);
	}
}
