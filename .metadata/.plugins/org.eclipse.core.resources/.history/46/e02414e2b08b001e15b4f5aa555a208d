package gameplay;

import javax.swing.JFrame;

public class GameWin extends JFrame{
	
	public GameWin(String character, String playerName) {
		setTitle("Dungeon Run");
		GamePanel gameP = new GamePanel(character, playerName);
		add(gameP);
		gameP.setupGame();
		gameP.startMainT();
		pack();
		
		setLocationRelativeTo(null);
		setDefaultCloseOperation(EXIT_ON_CLOSE);
		setResizable(false);
	}
	public GameWin(String character) {
		setTitle("Dungeon Run");
		GamePanel gameP = new GamePanel(character, playerName);
		add(gameP);
		gameP.loadGameData();
		gameP.startMainT();
		pack();
		
		setLocationRelativeTo(null);
		setDefaultCloseOperation(EXIT_ON_CLOSE);
		setResizable(false);
	}
}
