package gameplay;

import java.awt.event.KeyEvent;
import java.awt.event.KeyListener;

public class KeyHandler implements KeyListener{

	public boolean wP, sP, aP, dP;	// wasd valamelyik gombja meg lett nyomva
	
	@Override
	public void keyTyped(KeyEvent e) {
		// TODO MÃ©g nem kell ide semmi
	}

	@Override
	public void keyPressed(KeyEvent press) {
		int kcode = press.getKeyCode();
		
		switch (kcode) {
		case KeyEvent.VK_W:
			wP = true;
			break;
		case KeyEvent.VK_S:
			sP = true;
			break;
		case KeyEvent.VK_A:
			aP = true;
			break;
		case KeyEvent.VK_D:
			dP = true;
			break;
		default: break;
		}
	}

	@Override
	public void keyReleased(KeyEvent releas) {
		int kcode = releas.getKeyCode();
		
		switch (kcode) {
		case KeyEvent.VK_W:
			wP = false;
			break;
		case KeyEvent.VK_S:
			sP = false;
			break;
		case KeyEvent.VK_A:
			aP = false;
			break;
		case KeyEvent.VK_D:
			dP = false;
			break;
		default: break;
		}
	}

}
